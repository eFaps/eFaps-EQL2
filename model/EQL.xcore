class PrintObjectStatement
    extends PrintStatement<PrintObjectStatement>, ObjectStmt<PrintObjectStatement>
{

    op String eqlStmt() {
        var String ret =  "print object " + oid + " "
        if (getSelection() != null) {
            ret = ret + " " + getSelection().eqlStmt()
        }
        return ret
