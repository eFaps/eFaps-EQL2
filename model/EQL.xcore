abstract class BaseQuery<T>
    extends EQLElement, Generic<T>
{

    String[] types

    contains Where where

    op T addType(String _type)
    {
        typesList.add(_type)
        return getThis
    }

    op T setWhereC(Where _where)
    {
        setWhere(_where)
        return getThis
    }

    op String eqlStmt() {
        var String ret =  "query type "
        var first = true
        for (String aType : typesList) {
            if (first) {
                first = false
            } else {
                ret = ret + ", "
            }
            ret = ret + aType
        }
        if (getWhere != null) {
            ret = ret + getWhere.eqlStmt()
        }
        return ret
    }

    op T where()
    {
        if (getWhere() == null) {
           setWhere(IEqlFactory.eINSTANCE.createWhere())
        }
        return getThis
    }
}

